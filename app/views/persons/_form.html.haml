= form_for person_path(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field '', value: @user.username#,  value: @user.username

  .field
    = f.label :nickname
    = f.text_field '',value: @user.nickname
  .field
    = f.label :provider
    = f.text_field '',value: @user.provider
  .field
    = f.label :url
    = f.text_field '',value: @user.url
  .actions
    = f.submit 'Save'
