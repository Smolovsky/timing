.custom
  .navbar.navbar-inverse.navbar-default.navbar-fixed-top
    .navbar-inner-lilac
      .container
        .navbar-header
          =link_to image_tag('logo.png', width: '50', height: '50', class: 'visible-xs visible-sm logo-small'), '#'
          %button.navbar-toggle{:type => 'button'}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              =link_to 'Home', root_path
            %li
              =link_to 'My tasks', tasks_path
            %li
              =link_to 'My profile', user_im_path
            %li
              %a{:href => persons_path} Clients
          .visible-md.visible-lg{:style => 'height:0px;width:150px;margin:0 auto;'}
            %div{:style => 'position:fixed; text-align:center; width:150px;z-index:999; height:20px; top:5px;'}
              =link_to image_tag('logo.png', width: '75', height: '75'), root_path
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li
                %span.username__
                  = current_user.username
                  = link_to 'Выйти', destroy_user_session_path, :method => :delete
            - else
              %li
                = link_to image_tag('Twitter-round.png', class: "auth_img"), user_omniauth_authorize_path(:vkontakte), style: 'padding: 0px 5px;'
              %li
                = link_to image_tag('vk.png', class: "auth_img"), user_omniauth_authorize_path(:vkontakte), style: 'padding: 0px 5px;'
              %li
                = link_to image_tag('fc.png', class: "auth_img"), user_omniauth_authorize_path(:facebook), style: 'padding: 0px 5px;'
              %li
                = link_to 'Войти', new_user_session_path
              %li
                = link_to 'Зарегистрироваться', new_user_registration_path