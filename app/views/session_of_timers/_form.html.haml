= form_for @session_of_timer do |f|
  - if @session_of_timer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@session_of_timer.errors.count, "error")} prohibited this session_of_timer from being saved:"
      %ul
        - @session_of_timer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :day_id
    = f.number_field :day_id
  .field
    = f.label :time_in_work
    = f.datetime_select :time_in_work
  .actions
    = f.submit 'Save'
